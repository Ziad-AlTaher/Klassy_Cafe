@model List<TbEmployee>
@{
    ViewData["Title"] = "List";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Employees</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Admin</a></li>
                        <li class="breadcrumb-item active">Emplooyees</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Employees</h3>
                &nbsp; 	&nbsp; 	&nbsp;	&nbsp;	&nbsp;
                <a class="btn btn-info" asp-controller="Hr" asp-action="Edit">
                    <i class="fas fs-plus">
                    </i>
                    ADD An Employee
                </a>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Jop
                            </th>
                            <th>
                                Coockes
                            </th>

                            <th>
                                Phone
                            </th>

                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)

                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    <img style="width:75px; hight : 150px" src="@string.Format("/Uploads/{0}",item.ImageName)" alt="Sorry Item Image Not Found ">
                                </td>
                                <td>
                                    <a>
                                        @item.Jop.Name
                                    </a>
                                </td>
                                
                                <td @*class="project_progress"*@>
                                    @item.Cockes
                                </td>
                                
                                <td>
                                    @item.Phone
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.NationalId" class="btn btn-info btn-sm">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>@*asp*@
                                    <a class="btn btn-danger btn-sm"  asp-action="Delete" asp-route-empId="@item.NationalId">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
