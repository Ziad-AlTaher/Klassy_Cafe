@model List<TbItem>
@{
    ViewData["Title"] = "List";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Items</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Admin</a></li>
                        <li class="breadcrumb-item active">Items</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Items</h3>
                &nbsp; 	&nbsp; 	&nbsp;	&nbsp;	&nbsp;
                <a class="btn btn-info" asp-controller="Items" asp-action="Edit">
                    <i class="fas fs-plus">
                    </i>
                    ADD An Item
                </a>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th @*style="width: 1%"*@>
                                ID
                            </th>
                            <th style="width: 15%">
                                Product Name
                            </th>
                            <th style="width: 15%">
                                Image
                            </th>
                            <th style="width: 10%">
                                Price
                            </th>

                            <th style="width: 10%">
                                Category
                            </th>
                            <th style="width: 25%">
                                Discription
                            </th>
                            <th style="width: 25%">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)

                        {
                            <tr>
                                <td>
                                    @item.ItemId
                                </td>
                                <td>
                                    <a>
                                        @item.ItemName
                                    </a>
                                </td>
                                <td>
                                    <img style="width:75px; hight : 150px" src="@string.Format("/Uploads/{0}",item.ImageName)" alt="Sorry Item Image Not Found ">
                                </td>
                                <td >
                                    @item.SalesPrice $
                                </td>
                                <td>
                                     @item.Category.CategoryName
                                </td>
                                <td>
                                    @item.Disciption
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ItemId" class="btn btn-info btn-sm">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>

                                    @using (Html.BeginForm("Delete", "Items", new { itemId = @item.ItemId }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                                    }


                                    @*<a class="btn btn-danger btn-sm" asp-controller="Items" asp-action="Delete" asp-route-itemId="@item.ItemId">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>*@
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
