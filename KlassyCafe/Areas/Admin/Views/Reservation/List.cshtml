@model List<TbReservation>
@{
    ViewData["Title"] = "List";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Reservations</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Admin</a></li>
                        <li class="breadcrumb-item active">Reservations</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Reservations</h3>
                &nbsp; 	&nbsp; 	&nbsp;	&nbsp;	&nbsp;
                

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th @*style="width: 1%"*@>
                                Name
                            </th>
                            <th style="width: 15%">
                                Number Of Gustes
                            </th>
                            <th style="width: 15%">
                                Date
                            </th>
                            <th style="width: 10%">
                                Time
                            </th>

                            <th style="width: 10%">
                                Email
                            </th>
                            
                            <th style="width: 25%">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reservatinon in Model)

                        {
                            <tr>
                                <td>
                                    @reservatinon.Name
                                </td>
                                <td>
                                    
                                        @reservatinon.NGuests
                                    
                                </td>
                                
                                <td>
                                  @reservatinon.Date
                                </td>
                                <td>
                                    @reservatinon.Time
                                </td>
                                <td>
                                    @reservatinon.Email
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        Accept 
                                    </a>
                                     
                                    @*<a asp-action="Edit" asp-route-email="@reservatinon.Email" class="btn btn-info btn-sm">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>*@
                                    <a class="btn btn-danger btn-sm" asp-controller="Reservation" asp-action="Decline" asp-route-resId="@reservatinon.ReservationId" asp-route-date="@reservatinon.Date">
                                        <i class="fas fa-trash">
                                        </i>
                                        Decline
                                    </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
